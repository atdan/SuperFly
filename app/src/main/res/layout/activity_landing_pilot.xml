<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="24dp"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LandingPilotActivity">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_margin="12dp"
            android:layout_alignParentEnd="true"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorPrimary"
            android:id="@+id/profileImage"
            android:src="@drawable/ic_person_black_24dp"
            android:layout_width="90dp" android:layout_height="90dp"/>


    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:layout_below="@id/profileImage"
              android:text="Welcome Ayokunle Peter,"
              android:id="@+id/wel"
              style="@style/TextAppearance.AppCompat.Caption"
              android:textStyle="bold"
              android:textSize="22sp"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="These are your flights for the week"
              android:fontFamily="sans-serif"
              android:layout_below="@id/wel"
              android:textStyle="bold"
              android:id="@+id/sa"
              android:textColor="#000"
              android:textSize="17sp"
              android:layout_marginTop="10dp"/>
    <ScrollView android:layout_width="match_parent"
                android:layout_below="@id/sa" android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical" android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                               android:padding="6dp"
                                               android:id="@+id/caaa"
                                               app:cardCornerRadius="8dp"
                                               android:layout_marginTop="20dp"
                                               android:elevation="8dp"
                                               android:background="@color/colorPrimary"
                                               android:backgroundTint="@color/colorPrimary"
                                               android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                        android:id="@+id/cardView"
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="4dp"
                        android:elevation="8dp"
                        android:padding="8dp"
                        android:outlineSpotShadowColor="#000"
                        android:layout_height="wrap_content">
                    <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TableRow android:layout_margin="8dp">
                            <TextView
                                    android:text="Name of Chopper:"
                                    android:textSize="18sp"
                                    android:textColor="#000"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:text="Max Redmi 20000"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="18sp"
                                    android:textColor="#000"
                                    android:textStyle="bold"/>
                        </TableRow>
                        <TableRow android:layout_margin="8dp">
                            <TextView
                                    android:text="Time schedule:"
                                    android:textSize="18sp"
                                    android:textColor="#000"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:text="8am"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="18sp"
                                    android:textColor="#000"
                                    android:textStyle="bold"/>
                        </TableRow>
                        <TableRow android:layout_margin="8dp">
                            <TextView
                                    android:text="Date Schedule:"
                                    android:textSize="18sp"
                                    android:textColor="#000"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:text="Thursday"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="18sp"
                                    android:textColor="#000"
                                    android:textStyle="bold"/>
                        </TableRow>
                        <TableRow android:layout_margin="8dp">
                            <TextView
                                    android:text="Pickup location"
                                    android:textSize="18sp"
                                    android:textColor="#000"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:text="Ikeja"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="18sp"
                                    android:textColor="#000"
                                    android:textStyle="bold"/>
                        </TableRow>
                    </TableLayout>


                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                               android:padding="6dp"
                                               app:cardCornerRadius="8dp"
                                               android:layout_marginTop="20dp"
                                               android:elevation="8dp"
                                               android:background="@color/colorPrimary"
                                               android:backgroundTint="@color/colorPrimary"
                                               android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="4dp"
                        android:elevation="8dp"
                        android:padding="8dp"
                        android:outlineSpotShadowColor="#000"
                        android:layout_height="wrap_content">
                    <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TableRow android:layout_margin="8dp">
                            <TextView
                                    android:text="Name of Chopper:"
                                    android:textSize="18sp"
                                    android:textColor="#000"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:text="Max Chopper 4352"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="18sp"
                                    android:textColor="#000"
                                    android:textStyle="bold"/>
                        </TableRow>
                        <TableRow android:layout_margin="8dp">
                            <TextView
                                    android:text="Time schedule:"
                                    android:textSize="18sp"
                                    android:textColor="#000"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:text="8am"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="18sp"
                                    android:textColor="#000"
                                    android:textStyle="bold"/>
                        </TableRow>
                        <TableRow android:layout_margin="8dp">
                            <TextView
                                    android:text="Date Schedule:"
                                    android:textSize="18sp"
                                    android:textColor="#000"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:text="Thursday"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="18sp"
                                    android:textColor="#000"
                                    android:textStyle="bold"/>
                        </TableRow>
                        <TableRow android:layout_margin="8dp">
                            <TextView
                                    android:text="Pickup location"
                                    android:textSize="18sp"
                                    android:textColor="#000"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:text="Ikeja"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="18sp"
                                    android:textColor="#000"
                                    android:textStyle="bold"/>
                        </TableRow>
                    </TableLayout>


                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                               android:padding="6dp"
                                               app:cardCornerRadius="8dp"
                                               android:layout_marginTop="30dp"
                                               android:elevation="8dp"
                                               android:background="@color/colorPrimary"
                                               android:backgroundTint="@color/colorPrimary"
                                               android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="4dp"
                        android:elevation="8dp"
                        android:padding="8dp"
                        android:outlineSpotShadowColor="#000"
                        android:layout_height="wrap_content">
                    <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TableRow android:layout_margin="8dp">
                            <TextView
                                    android:text="Name of Chopper:"
                                    android:textSize="18sp"
                                    android:textColor="#000"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:text="Max Chopper 4352"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="18sp"
                                    android:textColor="#000"
                                    android:textStyle="bold"/>
                        </TableRow>
                        <TableRow android:layout_margin="8dp">
                            <TextView
                                    android:text="Time schedule:"
                                    android:textSize="18sp"
                                    android:textColor="#000"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:text="8am"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="18sp"
                                    android:textColor="#000"
                                    android:textStyle="bold"/>
                        </TableRow>
                        <TableRow android:layout_margin="8dp">
                            <TextView
                                    android:text="Date Schedule:"
                                    android:textSize="18sp"
                                    android:textColor="#000"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:text="Thursday"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="18sp"
                                    android:textColor="#000"
                                    android:textStyle="bold"/>
                        </TableRow>
                        <TableRow android:layout_margin="8dp">
                            <TextView
                                    android:text="Pickup location"
                                    android:textSize="18sp"
                                    android:textColor="#000"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:text="Ikeja"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="18sp"
                                    android:textColor="#000"
                                    android:textStyle="bold"/>
                        </TableRow>
                    </TableLayout>


                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>